<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/new_row_acivity_classifier_results_container_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <View
            android:id="@+id/new_row_acivity_classifier_results_green_side_view"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/dark_green" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_margin"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/new_row_acivity_classifier_results_icon_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What are Comments?"
                android:textColor="@color/textColorPrimary"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/new_row_acivity_classifier_results_confidence_level_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:text="0 min" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>